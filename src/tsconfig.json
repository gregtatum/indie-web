{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "frontend/*": ["./frontend/*"],
      "server/*": ["./server/*"],
      "shared/*": ["./shared/*"],
    }
  },
  "include": ["./"]
}
